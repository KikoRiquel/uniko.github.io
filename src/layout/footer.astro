<footer>
    <img class="footer--logo" src="/assets/logo/logo_uniko.svg" alt="" />
</footer>

<style>
    footer {
        min-height: 100vh;
        padding: 0 var(--default-spacing-x);

        display: grid;
        grid-template-columns: var(--grid-container-columns);
        grid-template-rows: var(--grid-container-rows);
        gap: var(--grid-container-gap);
    }

    div {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
    }

    img {
        width: 100%;
        grid-column: 3 / 7;
        grid-row: 1;
        align-self: center;
        justify-self: center;
    }
</style>

<script>
    import { gsap } from "gsap";
    import { Physics2DPlugin } from "gsap/Physics2DPlugin";

    gsap.registerPlugin(Physics2DPlugin);

    gsap.to(".footer--logo", {
        duration: 2,
        physics2D: {
            velocity: 300,
            angle: 90,
            acceleration: 50,
            accelerationAngle: 270,
        },
    });
</script>
