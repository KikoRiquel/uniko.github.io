---
import Contact from "@/components/contact.astro";
---

<footer>
    <Contact classNames={"footer--contact"} />
</footer>

<style is:global>
    footer {
        min-height: 100vh;
        padding: 0 var(--default-spacing-x);

        display: grid;
        grid-template-columns: var(--grid-container-columns);
        grid-template-rows: var(--grid-container-rows);
        gap: var(--grid-container-gap);
    }

    .footer--contact {
        padding-bottom: calc(var(--default-spacing-y) * 2);
        align-self: end;
        grid-column: 4 / 9;
        grid-row: 1;

        width: 100%;
    }
</style>
