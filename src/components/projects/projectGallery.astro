---
// src/components/projects/ProjectGallery.astro
---

<dialog id="project-dialog" class="project-modal">
  <!-- <div class="modal-controls">
    <button id="close-dialog">CERRAR</button>
  </div> -->
  <div class="dialog-minimap"></div>
  <div class="dialog-gallery" id="modal-gallery-content"></div>
</dialog>

<style>
  .dialog-minimap {
    position: absolute;
    top: 1rem;
    right: 1rem;
    height: 100vh;
    width: 10vw;
    background-color: var(--color-red);
    z-index: 10;
  }

  .project-modal {
    width: 100%;
    height: 100%;
    max-width: 100%;
    max-height: 100%;

    margin: 0;
    padding: 0;

    border: none;
    cursor: url("/src/assets/cursors/projects-close-cursor.svg"), auto;
  }

  .dialog-gallery {
    display: flex;
    flex-direction: column;
  }

  /* Estilo para las imágenes inyectadas */
  .dialog-gallery :global(img) {
    width: 100%;
    height: auto;
    object-fit: cover;

    margin: 0;
    padding: 0;
  }
</style>

<script>
  const dialog = document.querySelector("#project-dialog") as HTMLDialogElement;
  const galleryContent = document.querySelector("#modal-gallery-content");

  // Hacer la función accesible globalmente
  // @ts-ignore
  window.openProjectGallery = (images: string[]) => {
    if (!galleryContent || !dialog) return;

    galleryContent.innerHTML = ""; 

    images.forEach((url) => {
      const img = document.createElement("img");
      img.src = url;
      galleryContent.appendChild(img);
    });

    dialog.showModal();
  };

  // CERRAR EL DIALOG CUANDO SE HACE CLICK EN EL
  dialog?.addEventListener("click", () => dialog.close());
</script>
