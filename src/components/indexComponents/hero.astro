    main,
    .logo--container {
        min-height: 100vh;
        padding: 0 var(--default-spacing-x);

        display: grid;
        grid-template-columns: var(--grid-container-columns);
        grid-template-rows: var(--grid-container-rows);
        gap: var(--grid-container-gap);
    }

    div {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
    }

    .logo--container {
        position: fixed;
        z-index: 0;
    }
    img {
        width: 100%;
        grid-column: 3 / 7;
        grid-row: 1;
        align-self: center;
        justify-self: center;
    }

    h1 {
        grid-column: 7 / 9;
        grid-row: 1;
        align-self: end;
        text-align: right;
        padding-bottom: var(--default-spacing-y);
    }
</style>

