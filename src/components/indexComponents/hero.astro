---

<main>
    <div class="main--container">
        <img src="/assets/logo/logo_uniko.svg" alt="" />
        <h1><span>GRAPHIC DESIGN STUDIO</span> <br /> BASED IN UK</h1>
    </div>
    <div class="main--canva-container">
        <canvas id="canvas"></canvas>
    </div>
</main>

<style>
    main {
        min-height: 100vh;
        padding: 0 var(--default-spacing-x);
        position: relative;
    }

    .main--canva-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;

        overflow: hidden;
    }

    .main--container {
        height: 100vh;
        padding: 0 var(--default-spacing-x);

        display: grid;
        grid-template-columns: var(--grid-container-columns);
        grid-template-rows: var(--grid-container-rows);
        gap: var(--grid-container-gap);
    }

    img {
        width: 100%;
        grid-column: 3 / 7;
        grid-row: 1;
        align-self: center;
        justify-self: center;
    }

    h1 {
        grid-column: 7 / 9;
        grid-row: 1;
        align-self: end;
        text-align: right;
        padding-bottom: var(--default-spacing-y);

        span {
            color: var(--color-red);
        }
    }
</style>

<script>
    import { gsap } from "gsap";
    import { SplitText } from "gsap/SplitText";

    gsap.registerPlugin(SplitText);

    const span = document.querySelector("h1 span") as HTMLElement;
    const split = new SplitText(span, { type: "chars" });

    span.addEventListener("mouseenter", () => {
        gsap.to(split.chars, {
            scale: 1.6,
        });
    });
    span.addEventListener("mouseleave", () => {
        gsap.to(split.chars, {
            scale: 1,
        });
    });
</script>

<script>
    const canvas = document.getElementById("canvas");
    const ctx = canvas.getContext("2d");

    let points = [];
    const MAX_POINTS = 5000;

    function resize() {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
    }

    window.addEventListener("resize", resize);
    resize();

    window.addEventListener("mousemove", (e) => {
        points.push({ x: e.clientX, y: e.clientY });
    });

    function animate() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);

        if (points.length > MAX_POINTS) {
            points.shift();
        }

        if (points.length > 0) {
            points.shift();
        }

        if (points.length > 1) {
            ctx.beginPath();

            ctx.strokeStyle = "#c72b2b";
            ctx.lineWidth = 10;
            ctx.lineCap = "round";
            ctx.lineJoin = "round";

            ctx.moveTo(points[0].x, points[0].y);

            for (let i = 1; i < points.length; i++) {
                ctx.lineTo(points[i].x, points[i].y);
            }

            ctx.stroke();
        }

        requestAnimationFrame(animate);
    }

    animate();
</script>
